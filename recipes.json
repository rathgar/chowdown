---
layout: null
---
{% assign counter = 1 %}
{% assign total = site.recipes | size %}
[{% for post in site.recipes %}
{% assign image_url =  %}
    {
      "id":    "{{ post.slug }}",
      "title": "{{ post.title }}",
      "image": "{{ "/images/" | append: post.image | absolute_url }}",
      "url":   "{{ post.url | absolute_url }}",
    }{% if counter == total %}{% else %},{% endif %}
{% assign counter = counter |plus: 1 %}{% endfor %}]
